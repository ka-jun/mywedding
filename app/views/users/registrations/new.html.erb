<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name, autofocus: true, autocomplete: "Last name" %>
  </div>

  <div class="field">
  <%= f.label :first_name1 %><br />
  <%= f.text_field :first_name1, autofocus: true, autocomplete: "First person Name" %>
  </div>

  <div class="field">
  <%= f.label :first_name2 %><br />
  <%= f.text_field :first_name2, autofocus: true, autocomplete: "Second person Name" %>
  </div>

  <div class="field">
  <%= f.label :anniversary %><br />
  <%= f.text_field :anniversary, autofocus: true, autocomplete: "anniversary" %>
  </div>

  <div class="field">
  <%= f.label :area %><br />
  <%= f.text_field :area, autofocus: true, autocomplete: "area" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
